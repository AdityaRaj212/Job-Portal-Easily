<div class="heading">List of Applicants for - <%= job.profile %> at <%= job.hirer %></div>
<div class="applicant_header">
    <a class="btn btn-info listing_btn" href="/jobDetail/<%= job.id %>"><i class="fa-solid fa-arrow-left"></i> Back to Job Details</a>
    <div class="sub_heading">Number of applicants: <%= applicants.length %></div>
</div>

<div class="applicant_list_container">
    <% applicants.forEach((applicant)=>{ %>
        <div class="card" style="width: 30rem;">
            <div class="card-body">
                <div class="heading center_text"><%= applicant.name %></div>
                <div class="applicant_contact_info">
                    <div class="applicant_contact content">
                        <div class="applicant_sub_heading">Contact number</div>
                        <div class="applicant_content"><%= applicant.contact %></div>
                    </div>
                    <div class="applicant_email content">
                        <div class="applicant_sub_heading">Email address</div>
                        <div class="applicant_content"><%= applicant.email %></div>
                    </div>
                </div>
                <div>
                    <!-- <embed src="<%= applicant.resume_path %>" type="application/pdf" width="100%" height="600px" /> -->
                    <div class="applicant_sub_heading">Resume</div>
                    <iframe src="/pdf/<%= encodeURIComponent(applicant.resume_path) %>" width="100%" height="600px"></iframe>
                </div>
            </div>
          </div>
    <% }) %>
</div>