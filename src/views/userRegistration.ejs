
<div class="registration_container">
    <h3 class="heading">Register</h3>
    <div class="registration_form card">
        <form action="/register" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" rows = "3" name="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="registration_user_type_selection">
                <div>Register as : &nbsp;</div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="user_type" value="applicant" checked>
                    <label class="form-check-label" for="user_type">
                      Applicant &nbsp;
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="user_type" value="hirer">
                    <label class="form-check-label" for="user_type">
                      Hirer
                    </label>
                  </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>