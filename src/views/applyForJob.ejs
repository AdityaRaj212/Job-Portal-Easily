<div class="apply_container">
    <h3 class="heading">Apply for Job</h3>
    <div class="apply_form card">
        <form action="/apply_for_job/<%= job_id %>" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= userName %>" disabled>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" rows = "3" name="email" value="<%= userEmail %>" disabled>
            </div>
            <div class="mb-3">
                <label for="contact_no" class="form-label">Contact number</label>
                <input type="tel" class="form-control" name="contact_no">
            </div>
            <div class="mb-3">
                <input type="file" name="resume_path">
            </div>
            <button type="submit" class="btn btn-primary">Apply</button>
        </form>
    </div>
</div>